# AutoCorrect Backend Environment Configuration
# Copy this file to .env and update values as needed

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
DEBUG=True

# Model Settings
PRETRAINED_MODEL_NAME=pszemraj/flan-t5-large-grammar-synthesis
SMALL_MODEL_NAME=pszemraj/flan-t5-small-grammar-synthesis
USE_SMALL_MODEL=True  # Set to False for production
USE_GPU=False  # Set to True if GPU available

# Performance
MAX_RESPONSE_TIME_MS=500
MAX_INPUT_LENGTH=512
BATCH_SIZE=8

# Caching
ENABLE_CACHE=True
CACHE_TYPE=disk  # disk or redis
CACHE_TTL=86400  # 24 hours

# Redis (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# N-gram Model
NGRAM_ORDER=4  # 1=unigram, 2=bigram, 3=trigram, 4=4-gram

# Training
MAX_CORPUS_SIZE=100  # Number of books to download
MIN_BOOK_LENGTH=10000  # Minimum characters per book
TYPO_ERROR_RATE=0.15  # 15% of words
GRAMMAR_ERROR_RATE=0.10  # 10% of sentences

# Privacy & Security
TLS_ENABLED=False
NO_TEXT_STORAGE=True
MAX_REQUEST_SIZE=10000

# Logging
LOG_LEVEL=INFO
