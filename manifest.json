{
  "manifest_version": 3,
  "name": "AutoCorrect Extension",
  "version": "1.0.0",
  "description": "Offline spell-check and autocorrect for Chrome text fields.",

  "permissions": ["storage", "contextMenus", "tabs"],

  "icons": {
    "16": "icons/hello_extensions.png",
    "32": "icons/hello_extensions.png",
    "48": "icons/hello_extensions.png",
    "128": "icons/hello_extensions.png"
  },

  "action": {
    "default_title": "AutoCorrect",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/hello_extensions.png",
      "32": "icons/hello_extensions.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "assets/shards/*",
        "worker.js",
        "libs/pako.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}